<%- include('../includes/head.ejs') %> 
</head>
<body class="vh-100 d-flex flex-column">
  <%- include('../includes/navigation.ejs') %> 

    <main class="d-flex flex-column container flex-grow-1">
        <h1>My product</h1>
        <% if (products.length > 0) {%> 
          <div class="container">
            <div class="row gy-5 gx-5">
              <% for (let product of products) { %> 
                <div class="col-xl-3 col-md-4 col-sm-6 col-xs-12">
                  <article class="card shadow">
                    <div class="card-header d-flex align-items-center" style="min-height: 65px;">
                      <%= product.title %> 
                    </div>
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                    <div class="card-body">
                      <h5 class="card-title">$19.50</h5>
                      <p class="card-text" style="max-width: 98%; max-height:48px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. In, qui officia aperiam laborum ad, vel sed enim maxime, odit necessitatibus quas deleniti magnam? Deserunt sunt possimus laudantium minima, laboriosam quos.
                      </p>
                      <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                  </article>
                </div>
              <% } %> 
            </div>
          </div>
        <% } else { %>
          <h1>No product found</h1>
        <% } %> 
    </main>

<%- include('../includes/footer.ejs') %> 